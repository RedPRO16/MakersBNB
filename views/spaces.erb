<html>
    <head>
        <style>
            body {
                display: flex;
                justify-content: center;
                align-items: center;
                flex-direction: column;
                height: 100px;
                position: absolute;
                top: 0;
                bottom: 0;
                left: 0;
                right: 0;
                margin: auto;
                font-size: 2rem;
            }

            h1 {
                font-size: 5rem;
            }

            div {
                display: flex;
                flex-direction: column;
            }

            .homepage-button {
                font-size: 2rem;
                text-decoration: none;
                color: black;
                border-style: solid;
                padding: 0.5rem;
                border-radius: 1rem;
            }

            .booking-button {
                font-size: 2rem;
                text-decoration: none;
                color: black;
                border-style: solid;
                padding: 0.5rem;
                border-radius: 1rem;
            }
        </style>
    </head>
    <body>
    <h1>All Spaces</h1>
    <%if !@user_id.nil?%>
    <a class="booking-button" href='/requests'>Booking requests</a>
    <%end%>
        <div>
            <% @spaces.each do |space| %>
            <p>
            <a href="/spaces/<%= space.id %>"><%= space.name %></a>
            <br>
            <%= space.description %>
            </p>
        <% end %>
        </div>
        <a class="homepage-button" href="/">Return to homepage</a>
    </body>
    
</html>