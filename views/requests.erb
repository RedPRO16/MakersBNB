<html>
  <head>
    <style>
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        height: 100px;
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        margin: auto;
        font-size: 2rem;
      }

      .back-button {
        font-size: 2rem;
        text-decoration: none;
        color: black;
        border-style: solid;
        padding: 0.5rem;
        border-radius: 1rem;
      }
    </style>
  </head>
    <body>
      <h1>Booking Requests</h1>
      <% @booking_requests.each do |booking| %>
        <%= booking.space_name %>
        <%= booking.space_description %>
        Â£<%= booking.price_to_string %> per night
        Requesting to book on <%= booking.date.to_s %>
        <% if booking.is_booked %>
          This booking has been confirmed!
        <% else %>
          Booking awaiting confirmation
        <% end %>
        <form action='/requests/cancel/<%=booking.id%>' method='POST'>
          <input type='submit' value='Cancel booking'>
        </form>
      <% end %>
      <a class="back-button" href="/spaces">Back</a>
    </body>
</html>

